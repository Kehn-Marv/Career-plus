# Career+ Backend Environment Variables
# Copy this file to .env and fill in the required values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Google Gemini API Key (REQUIRED)
# Get your API key from: https://ai.google.dev/
# This is required for AI-powered insights and recommendations
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model (default: gemini-2.5-flash-lite)
# The Gemini model to use for AI generation
# Options: gemini-2.5-flash-lite, gemini-1.5-pro, gemini-1.5-flash
# gemini-2.5-flash-lite is recommended for fast and cost-effective generation
GEMINI_MODEL=gemini-2.5-flash-lite

# ============================================================================
# API CONFIGURATION
# ============================================================================

# CORS Origins (comma-separated list of allowed origins)
# Add your frontend URLs here
# Default includes common development ports
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# RATE LIMITING
# ============================================================================

# Enable rate limiting (default: true)
# Set to false to disable rate limiting (not recommended for production)
RATE_LIMIT_ENABLED=true

# Maximum requests per minute per IP (default: 10)
# Adjust based on your API usage patterns and quotas
MAX_REQUESTS_PER_MINUTE=10

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================

# Hugging Face API Token (optional)
# Used for embeddings and additional AI features
# Get your token from: https://huggingface.co/settings/tokens
# Leave empty if not using Hugging Face features
HF_TOKEN=your_hugging_face_token_here

# Hugging Face Embedding Model (default: sentence-transformers/all-mpnet-base-v2)
# The model to use for generating text embeddings
HF_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# Hugging Face Generation Model (default: mistralai/Mistral-7B-Instruct-v0.2)
# The model to use for text generation (if using HF instead of Gemini)
HF_GENERATION_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# ============================================================================
# PDF GENERATION CONFIGURATION
# ============================================================================

# WeasyPrint Cache Directory (default: ./cache/weasyprint)
# Directory for caching WeasyPrint resources
WEASYPRINT_CACHE_DIR=./cache/weasyprint

# Template Directory (default: ./app/templates)
# Directory containing resume templates
TEMPLATE_DIR=./app/templates

# Maximum PDF Size in MB (default: 10)
# Maximum allowed size for generated PDF files
MAX_PDF_SIZE_MB=10

# PDF Generation Timeout in seconds (default: 30)
# Maximum time allowed for PDF generation
PDF_GENERATION_TIMEOUT=30
