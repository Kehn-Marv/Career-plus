# Career+ Frontend Environment Variables
# Copy this file to .env and fill in the required values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Backend API URL (REQUIRED)
# The URL where the Career+ backend API is running
# Default: http://localhost:8000 (for local development)
# Production: Set to your deployed backend URL
VITE_API_URL=http://localhost:8000

# AI Gateway URL (REQUIRED for AI features)
# Ollama AI Gateway URL for AI-powered semantic analysis
# This should be an ngrok URL or your deployed Ollama instance
# Example: https://your-ngrok-url.ngrok-free.dev
# Leave empty to disable AI features and use rule-based analysis only
VITE_AI_GATEWAY_URL=

# ============================================================================
# AI GATEWAY CONFIGURATION
# ============================================================================

# AI Gateway Model (default: gemma3:4b)
# The Ollama model to use for AI analysis
# Options: gemma3:4b, llama2, mistral, etc.
VITE_AI_GATEWAY_MODEL=gemma3:4b

# AI Gateway Timeout in milliseconds (default: 720000 = 12 minutes)
# Maximum time to wait for AI Gateway responses
# Increase if you experience timeout errors
VITE_AI_GATEWAY_TIMEOUT=720000

# AI Gateway Queue Delay in milliseconds (default: 3000 = 3 seconds)
# Delay between consecutive AI requests to avoid overwhelming the service
# Increase if you hit rate limits
VITE_AI_GATEWAY_QUEUE_DELAY=3000

# Enable AI-powered features (default: true)
# Set to false to disable all AI features and use rule-based analysis only
VITE_ENABLE_AI_FEATURES=true

# Fallback to rule-based analysis when AI unavailable (default: true)
# If true, the app will use rule-based analysis when AI services are down
# If false, analysis will fail when AI services are unavailable
VITE_FALLBACK_TO_RULES=true

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================

# Hugging Face Space URL (optional, for AI rewriting features)
# URL of your deployed Hugging Face Space for resume bullet rewriting
# Example: https://your-username-career-plus-rewriter.hf.space
# Leave empty if not using Hugging Face Space
VITE_HF_SPACE_URL=

# Hugging Face API Token (optional)
# Used as fallback if Hugging Face Space is unavailable
# Get your token from: https://huggingface.co/settings/tokens
# Leave empty if not using Hugging Face features
VITE_HF_TOKEN=
